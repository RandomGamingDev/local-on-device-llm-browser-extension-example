{
  "manifest_version": 3,
  "name": "Boiler TAI",
  "version": "1.0.0",

  "description": "A true Boilermaker AI TA which runs locally on your machine.",
  "icons": {
    "16": "resources/icons/icon-16.png",
    "48": "resources/icons/icon-48.png",
    "128": "resources/icons/icon-128.png",
    "512": "resources/icons/icon-512.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'",
    "workers": "script-src 'self' 'wasm-unsafe-eval'; connect-src 'self'; worker-src 'self'" 
  },
  "permissions": [
    "storage",
    "offscreen"
  ],
  "host_permissions": [
    "https://api.boilerexams.com/*"
  ],
  "action": {
    "default_popup": "src/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.boilerexams.com/*"],
      "js": ["src/main.js"]
    }
  ],
  "background": {
    "service_worker": "src/background.js",
    "scripts": ["src/background.js"]
  },
  "web_accessible_resources": [
    {
      "resources": ["resources/*", "wasm/*", "src/offscreen.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
        "id": "{26c4cb31-78d0-45d6-875a-3c7969f891d9}",
        "strict_min_version": "91.0"
    }
  }
}